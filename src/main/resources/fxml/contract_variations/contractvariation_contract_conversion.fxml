<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Group?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<fx:root type="VBox" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <RadioButton fx:id="rbContractConversion" mnemonicParsing="false" text="Conversión de contrato" textFill="#000fff">
         <VBox.margin>
            <Insets bottom="5.0" left="10.0" />
         </VBox.margin>
         <toggleGroup>
            <ToggleGroup fx:id="contractVariation" />
         </toggleGroup>
      </RadioButton>
      <Group fx:id="contractConversionGroup">
         <VBox.margin>
            <Insets left="10.0" />
         </VBox.margin>
         <children>
            <VBox>
               <children>
                  <HBox>
                     <children>
                        <Label prefHeight="26.0" text="Conversión">
                           <HBox.margin>
                              <Insets right="10.0" />
                           </HBox.margin>
                        </Label>
                        <ChoiceBox fx:id="contractConversionSelector" prefHeight="26.0" prefWidth="430.0" />
                     </children>
                     <padding>
                        <Insets bottom="5.0" />
                     </padding>
                  </HBox>
                  <HBox>
                     <children>
                        <Label prefHeight="26.0" text="Fecha de inicio">
                           <HBox.margin>
                              <Insets right="10.0" />
                           </HBox.margin>
                        </Label>
                        <DatePicker fx:id="dateFrom" prefHeight="26.0" prefWidth="125.0" />
                        <Label prefHeight="26.0" text="Fecha de finalización">
                           <HBox.margin>
                              <Insets left="10.0" right="10.0" />
                           </HBox.margin>
                        </Label>
                        <DatePicker fx:id="dateTo" prefHeight="26.0" prefWidth="125.0" />
                     </children>
                     <VBox.margin>
                        <Insets bottom="5.0" top="3.0" />
                     </VBox.margin>
                  </HBox>
               </children>
            </VBox>
         </children>
      </Group>
   </children>
   <padding>
      <Insets top="3.0" />
   </padding>
</fx:root>
