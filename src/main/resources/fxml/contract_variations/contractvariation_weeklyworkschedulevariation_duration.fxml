<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Group?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<fx:root type="VBox" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <VBox>
         <children>
            <Group fx:id="weeklyWorkScheduleGroup">
               <children>
                  <VBox>
                     <children>
                        <HBox>
                           <children>
                              <Label prefHeight="30.0" text="Fecha desde">
                                 <HBox.margin>
                                    <Insets left="5.0" right="5.0" />
                                 </HBox.margin>
                              </Label>
                              <DatePicker fx:id="dateFrom" prefHeight="30.0" prefWidth="140.0">
                                 <HBox.margin>
                                    <Insets left="5.0" right="5.0" />
                                 </HBox.margin>
                              </DatePicker>
                              <Label prefHeight="30.0" text="Fecha hasta">
                                 <HBox.margin>
                                    <Insets left="5.0" right="5.0" />
                                 </HBox.margin>
                              </Label>
                              <DatePicker fx:id="dateTo" prefHeight="30.0" prefWidth="140.0">
                                 <HBox.margin>
                                    <Insets left="5.0" right="5.0" />
                                 </HBox.margin>
                              </DatePicker>
                              <Label prefHeight="30.0" text="Duración de la variación de jornada">
                                 <HBox.margin>
                                    <Insets left="10.0" right="10.0" />
                                 </HBox.margin>
                              </Label>
                              <TextField fx:id="weeklyWorkScheduleDuration" alignment="CENTER" maxWidth="70.0" prefHeight="30.0" />
                              <Label prefHeight="31.0" text="días">
                                 <HBox.margin>
                                    <Insets left="10.0" />
                                 </HBox.margin>
                              </Label>
                           </children>
                        </HBox>
                        <HBox>
                           <children>
                              <TextArea fx:id="publicNotes" maxHeight="30.0" minWidth="857.0" promptText="Notas adicionales para el gestor">
                                 <HBox.margin>
                                    <Insets right="5.0" top="5.0" />
                                 </HBox.margin>
                              </TextArea>
                           </children>
                           <VBox.margin>
                              <Insets left="5.0" right="5.0" top="5.0" />
                           </VBox.margin>
                        </HBox>
                     </children>
                  </VBox>
               </children>
            </Group>
         </children>
      </VBox>
   </children>
</fx:root>
