            <Button fx:id="timeRecordButton" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" prefHeight="40.0" prefWidth="300.0" text="Impresión de Registros Horarios" textAlignment="CENTER">
               <VBox.margin>
                  <Insets left="68.5" top="10.0" />
               </VBox.margin>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
            <Button fx:id="exitButton" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" prefHeight="90.0" prefWidth="100.0" text="Salir" textAlignment="CENTER" textFill="#640000">
               <VBox.margin>
                  <Insets bottom="25.0" left="300.0" top="350.0" />
               </VBox.margin>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
         </children>
      </VBox>
   </children>
</fx:root>
