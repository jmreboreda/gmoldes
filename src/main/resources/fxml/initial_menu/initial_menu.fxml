<fx:root prefHeight="600.0" type="AnchorPane" xmlns="http://javafx.com/javafx/9" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <VBox>
         <children>
            <HBox>
               <children>
                  <ImageView pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../pics/GMapp_PNG_64x64.png" />
                     </image>
                     <HBox.margin>
                        <Insets top="5.0" />
                     </HBox.margin>
                  </ImageView>
                  <Label prefHeight="62.0" prefWidth="343.0" text="Gestoria Moldes :: Menú Principal" textFill="#640000">
                     <HBox.margin>
                        <Insets left="15.0" right="15.0" />
                     </HBox.margin>
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <Line endX="337.0" fill="#b1acac" startX="-100.0" stroke="#8d8a8a">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </Line>
            <Button fx:id="newContractButton" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" prefHeight="40.0" prefWidth="300.0" text="Nuevo contrato de trabajo" textAlignment="CENTER">
               <VBox.margin>
                  <Insets left="68.5" top="25.0" />
               </VBox.margin>
