<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
 
<hibernate-configuration>
    <session-factory>
 
        <!-- Connection settings -->
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.url">jdbc:postgresql://localhost/patata</property>
        <property name="hibernate.connection.username">patata</property>
        <property name="hibernate.connection.password">patata</property>

        <property name="hibernate.c3p0.min_size">5</property>
        <property name="hibernate.c3p0.max_size">20</property>
        <property name="hibernate.c3p0.timeout">300</property>
        <property name="hibernate.c3p0.max_statements">50</property>
        <property name="hibernate.c3p0.idle_test_period">3000</property>
 
        <!-- SQL dialect -->
        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQL94Dialect</property>

        <!-- Print executed SQL to stdout -->
        <property name="show_sql">false</property>
 
        <!-- Drop and re-create all database on startup -->
      <!--   <property name="hibernate.hbm2ddl.auto">create-drop</property> -->
        <property name="hibernate.hbm2ddl.auto">validate</property>
 
        <!-- Annotated entity classes -->
        <mapping class="gmoldes.persistence.vo.ClientVO"/>
        <mapping class="gmoldes.persistence.vo.ContractVO"/>
        <mapping class="gmoldes.persistence.vo.PersonVO"/>
        <mapping class="gmoldes.persistence.vo.TypesContractVariationsVO"/>
        <mapping class="gmoldes.persistence.vo.ContractTypeVO"/>
        <mapping class="gmoldes.persistence.vo.ClientCCCVO"/>
        <mapping class="gmoldes.persistence.vo.ServiceGMVO"/>

    </session-factory>
</hibernate-configuration>